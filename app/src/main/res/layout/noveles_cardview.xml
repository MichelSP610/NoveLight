<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="135dp"
    android:layout_height="210dp"
    android:layout_marginHorizontal="3dp"
    android:layout_marginVertical="10dp">

    <RelativeLayout
        android:id="@+id/novelLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_Color"
        android:orientation="vertical"
        android:padding="1dp">

        <ImageView
            android:id="@+id/novelImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="auto" />

        <TextView
            android:id="@+id/novelName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/novelImage"
            android:layout_alignEnd="@+id/novelImage"
            android:layout_alignBottom="@+id/novelImage"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/gradient"
            android:ellipsize="end"
            android:fadingEdge="horizontal"
            android:maxLines="1"
            android:paddingLeft="12dp"
            android:paddingRight="6dp"
            android:text="NovelName"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/leftVolumesOval"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="6dp"
            android:layout_marginTop="7dp"
            tools:srcCompat="@drawable/leftvolumesoval" />

        <TextView
            android:id="@+id/leftVolumes"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="6dp"
            android:layout_marginTop="7dp"
            android:text="X"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>